@model List<Produto>

@{
}

<div class="card">
    <div class="card-header font-weight-bold h3">
        Produto
        <button class="btn btn-sm btn-success float-right" id="criaProduto"> <i class="fas fa-plus"></i> </button>
    </div>
    <div class="card-body col-12" style="width:100%">
        <table id="example" class="table table-striped table-bordered nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Valor</th>
                    <th>Categoria</th>
                    <th>Marca</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var produto in Model)
                {
                    <tr>

                        <td class="text-center">@produto.Nome</td>
                        <td class="text-center">R$@produto.Valor</td>
                        <td class="text-center">@(produto.Categoria?.Nome ?? "Sem categoria")</td>
                        <td class="text-center">@produto.Marca</td>
                        <td class="text-center">
                            <button class="btn btn-sm btn-warning mr-2 editar" data-id="@produto.ProdutoId">  <i class="fas fa-edit"></i></button>
                            <button class="btn btn-sm btn-danger remover" data-id="@produto.ProdutoId"><i class="fas fa-trash"></i></button>
                        </td>

                    </tr>
                }

            </tbody>
            <tfoot>
                <tr>
                    <th>Nome</th>
                    <th>Valor</th>
                    <th>Categoria</th>
                    <th>Marca</th>
                    <th>Ações</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <div id="htmlModal"></div>
</div>



@section Scripts {
    <script type="text/javascript" src="~/js/produto/produto.js"></script>
}