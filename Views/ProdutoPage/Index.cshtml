@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-header font-weight-bold h3">
        Produto
        <button class="btn btn-sm btn-success float-right" id="criaProduto"> Criar novo Produto </button>
    </div>
    <div class="card-body col-12" style="width:100%">
        <table id="example" class="table table-striped table-bordered nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Valor</th>
                    <th>Categoria</th>
                    <th>Marca</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="text-center" >Donna Snider</td>
                    <td class="text-center" >Customer Support</td>
                    <td class="text-center" >New York</td>
                    <td class="text-center" >27</td>
                    <td class="text-center">
                        <button class="btn btn-sm btn-warning mr-2"><i class="fas fa-edit"></i></button>
                        <button class="btn btn-sm btn-danger "><i class="fas fa-trash"></i></button>
                    </td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <th>Nome</th>
                    <th>Valor</th>
                    <th>Categoria</th>
                    <th>Marca</th>
                    <th>Ações</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <div id="htmlModal"></div>
</div>



@section Scripts {
    <script type="text/javascript" src="~/js/produto/produto.js"></script>
}