@model Learn.Models.FrontEnd.FrontModalProdutoCategoria
@{
    Layout = "_Layout2";
}
<form method="post" action="api/produto" id="formProduto" class="formProduto">
    <div class="modal fade" id="modalProdutoForm" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body ">
                    <div class="form-row">

                        <div class="form-group col-sm-12 col-md-6 col-lg-6">
                            <label for="nome">Nome</label>
                            <input type="text" id="nome" name="Nome" class="form-control" value=" @Model.Produto?.Nome ">
                        </div>
                        <div class="form-group col-sm-12 col-md-6 col-lg-6">
                            <label>Valor</label>
                            <input type="text" name="Value" id="valor" class="form-control" value="@Model.Produto?.Valor">
                        </div>
                        <div class="form-group col-sm-12 col-md-6 col-lg-6">
                            <label>Marca</label>
                            <input type="text" name="Marca" class="form-control" value="@Model.Produto?.Marca">
                        </div>
                        <div class="form-group col-sm-12 col-md-6 col-lg-6">
                            <label>Categoria</label>
                            <select class="form-control" name="CategoriaId">
                                <option value="">Escolha.</option>
                                @foreach (var categoria in Model.Categorias)
                                {
                                    <option value="@categoria.CategoriaId">@categoria.Nome</option>

                                }
                            </select>
                        </div>
                        <div class="form-group col-12">
                            <label>Descrição</label>
                            <textarea class="form-control" rows="5" name="Descricao">@Model.Produto?.Descricao</textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer form-row">
                    <div class="form-group col-12">
                        <button type="button" class="btn btn-sm btn-danger float-left" data-dismiss="modal"><i class="fas fa-window-close"></i></button>
                        <button type="button" class="btn btn-sm btn-success float-right enviaProduto"><i class="fas fa-paper-plane"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
