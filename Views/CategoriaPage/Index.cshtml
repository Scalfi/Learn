@model List<Categoria>

@{
}

<div class="card">
    <div class="card-header font-weight-bold h3">
        Categoria
        <button class="btn btn-sm btn-success float-right" id="criaCategoria"> <i class="fas fa-plus"></i> </button>
    </div>
    <div class="card-body col-12" style="width:100%">
        <table id="example" class="table table-striped table-bordered nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Descrição</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var categoria in Model)
                {
                    <tr>

                        <td class="text-center">@categoria.Nome</td>
                        <td class="text-center">@(categoria.Descricao.Substring(0, 100))...</td>
                        <td>
                            <button class="btn btn-sm btn-warning mr-2 editar" data-id="@categoria.CategoriaId">  <i class="fas fa-edit"></i></button>
                            <button class="btn btn-sm btn-danger remover"  data-nome="@categoria.Nome" data-id="@categoria.CategoriaId"><i class="fas fa-trash"></i></button>
                        </td>

                    </tr>
                }

            </tbody>
            <tfoot>
                <tr>
                    <th>Nome</th>
                    <th>Descrição</th>
                    <th>Ações</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <div id="htmlModal"></div>
</div>



@section Scripts {
    <script type="text/javascript" src="~/js/categoria/categoria.js"></script>
}